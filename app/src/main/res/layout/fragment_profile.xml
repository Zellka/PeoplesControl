<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.main.ProfileFragment">

    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@color/teal_200"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Петрова Ольга Николаевна"
        app:layout_constraintLeft_toRightOf="@+id/user_photo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/user_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(071)998-87-54"
        app:layout_constraintLeft_toRightOf="@+id/user_photo"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/title_appeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_my_appeals"
        app:layout_constraintTop_toBottomOf="@+id/user_photo"
        tools:ignore="MissingConstraints" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_appeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/title_appeals"
        tools:listitem="@layout/item_appeal" />

</androidx.constraintlayout.widget.ConstraintLayout>