<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/navigation_regions">

    <fragment
        android:id="@+id/navigation_regions"
        android:name="com.example.peoplesontrol.ui.view.login.RegionsFragment"
        android:label="@string/title_region"
        tools:layout="@layout/fragment_regions">
        <action
            android:id="@+id/action_regionsFragment_to_loginFragment"
            app:destination="@id/navigation_login" />
    </fragment>

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.peoplesontrol.ui.view.login.LoginFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/navigation_registration" />
        <action
            android:id="@+id/action_loginFragment_to_regionsFragment"
            app:destination="@id/navigation_regions" />
    </fragment>
    <fragment
        android:id="@+id/navigation_registration"
        android:name="com.example.peoplesontrol.ui.view.login.RegistrationFragment"
        android:label="@string/title_registration"
        tools:layout="@layout/fragment_registration">
        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/navigation_login" />
    </fragment>

</navigation>